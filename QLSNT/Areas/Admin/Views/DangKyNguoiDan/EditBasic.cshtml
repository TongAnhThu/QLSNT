@model QLSNT.Models.NguoiDan

@{
    ViewData["Title"] = "Sửa thông tin cơ bản";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="fw-bold text-primary mb-4">Sửa thông tin cơ bản</h2>

<div class="card shadow-sm p-4">
    <form asp-action="Edit" method="post">
        @Html.AntiForgeryToken()

        <div class="row">
            <!-- Cột trái -->
            <div class="col-md-6">
                <!-- CCCD -->
                <div class="mb-3">
                    <label asp-for="MaCCCD" class="form-label"></label>
                    <input asp-for="MaCCCD" class="form-control" readonly />
                    <span asp-validation-for="MaCCCD" class="text-danger"></span>
                </div>

                <!-- Họ tên -->
                <div class="mb-3">
                    <label asp-for="HoTen" class="form-label"></label>
                    <input asp-for="HoTen" class="form-control" />
                    <span asp-validation-for="HoTen" class="text-danger"></span>
                </div>

                <!-- Ngày sinh -->
                <div class="mb-3">
                    <label asp-for="NgaySinh" class="form-label"></label>
                    <input asp-for="NgaySinh" type="date" class="form-control" />
                    <span asp-validation-for="NgaySinh" class="text-danger"></span>
                </div>

                <!-- Giới tính -->
                <div class="mb-3">
                    <label asp-for="GioiTinh" class="form-label"></label>
                    <select asp-for="GioiTinh" class="form-select">
                        <option value="">-- Chọn giới tính --</option>
                        <option value="Nam">Nam</option>
                        <option value="Nữ">Nữ</option>
                    </select>
                    <span asp-validation-for="GioiTinh" class="text-danger"></span>
                </div>
            </div>

            <!-- Cột phải -->
            <div class="col-md-6">
                <!-- Dân tộc -->
                <div class="mb-3">
                    <label asp-for="MaDanToc" class="form-label"></label>
                    <select asp-for="MaDanToc" class="form-select" asp-items="ViewBag.DanTocList">
                        <option value="">-- Chọn dân tộc --</option>
                    </select>
                </div>

                <!-- Tôn giáo -->
                <div class="mb-3">
                    <label asp-for="MaTonGiao" class="form-label"></label>
                    <select asp-for="MaTonGiao" class="form-select" asp-items="ViewBag.TonGiaoList">
                        <option value="">-- Chọn tôn giáo --</option>
                    </select>
                </div>

                <!-- Trình độ văn hóa -->
                <div class="mb-3">
                    <label asp-for="MaTDVH" class="form-label"></label>
                    <select asp-for="MaTDVH" class="form-select" asp-items="ViewBag.TrinhDoList">
                        <option value="">-- Chọn trình độ --</option>
                    </select>
                </div>

                <!-- Tình trạng hôn nhân -->
                <div class="mb-3">
                    <label asp-for="TinhTrangHonNhan" class="form-label"></label>
                    <select asp-for="TinhTrangHonNhan" class="form-select" asp-items="ViewBag.TinhTrangHonNhanList">
                        <option value="">-- Chọn tình trạng --</option>
                    </select>
                </div>

                <!-- Trạng thái công dân -->
                <div class="mb-3">
                    <label asp-for="TrangThaiCongDan" class="form-label"></label>
                    <select asp-for="TrangThaiCongDan" class="form-select" asp-items="ViewBag.TrangThaiCongDanList">
                        <option value="">-- Chọn trạng thái --</option>
                    </select>
                </div>
            </div>
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-success">Lưu thay đổi</button>
            <a asp-controller="DangKyNguoiDan" asp-action="EditDetails" asp-route-maCCCD="@Model.MaCCCD"
               class="btn btn-info">Sửa địa chỉ thường trú</a>

            <a asp-action="Index" asp-controller="NguoiDan" class="btn btn-secondary">Quay lại</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
