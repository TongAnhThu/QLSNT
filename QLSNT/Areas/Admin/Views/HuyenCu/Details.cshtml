@model QLSNT.Models.HuyenCu

@{
    ViewData["Title"] = "Chi tiết Huyện cũ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Chi tiết Huyện cũ</h1>
<hr />

<dl class="row">
    <dt class="col-sm-3">Mã huyện</dt>
    <dd class="col-sm-9">@Model.MaHuyenCu</dd>

    <dt class="col-sm-3">Tên huyện</dt>
    <dd class="col-sm-9">@Model.TenHuyenCu</dd>

    <dt class="col-sm-3">Loại huyện</dt>
    <dd class="col-sm-9">@Model.LoaiHuyen</dd>

    <dt class="col-sm-3">Mã tỉnh cũ</dt>
    <dd class="col-sm-9">@Model.MaTinhCu</dd>

    <dt class="col-sm-3">Trạng thái</dt>
    <dd class="col-sm-9">@Model.TrangThai</dd>

    <dt class="col-sm-3">Ghi chú</dt>
    <dd class="col-sm-9">@Model.GhiChu</dd>
</dl>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.MaHuyenCu" class="btn btn-warning">Sửa</a>
    <a asp-action="Index" class="btn btn-secondary ms-2">Quay lại</a>
</div>
