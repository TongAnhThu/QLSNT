@model QLSNT.Models.LichSuDiaChi

@{
    ViewData["Title"] = "Chi tiết lịch sử địa chỉ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mb-3 text-primary fw-bold">
    <i class="bi bi-info-circle"></i> Chi tiết lịch sử địa chỉ
</h2>

<div class="card shadow-sm">
    <div class="card-header bg-light fw-bold">
        <i class="bi bi-card-list"></i> Thông tin chi tiết
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3 text-muted">Mã bản ghi</dt>
            <dd class="col-sm-9 fw-bold">@Model.MaLichSuCuTru</dd>

            <dt class="col-sm-3 text-muted">CCCD</dt>
            <dd class="col-sm-9">@Model.MaCCCD</dd>

            <dt class="col-sm-3 text-muted">Họ tên</dt>
            <dd class="col-sm-9">@Model.NguoiDan?.HoTen</dd>

            <dt class="col-sm-3 text-muted">Địa chỉ cũ</dt>
            <dd class="col-sm-9 text-danger">@Model.DiaChiCu</dd>

            <dt class="col-sm-3 text-muted">Địa chỉ mới</dt>
            <dd class="col-sm-9 text-success fw-bold">@Model.DiaChiMoi</dd>

            <dt class="col-sm-3 text-muted">Ngày hiệu lực</dt>
            <dd class="col-sm-9">@Model.NgayHieuLuc?.ToString("dd/MM/yyyy")</dd>

            <dt class="col-sm-3 text-muted">Ngày kết thúc</dt>
            <dd class="col-sm-9">@Model.NgayKetThuc?.ToString("dd/MM/yyyy")</dd>

            <dt class="col-sm-3 text-muted">Loại thay đổi</dt>
            <dd class="col-sm-9">@Model.LoaiThayDoi</dd>

            <dt class="col-sm-3 text-muted">Số quyết định</dt>
            <dd class="col-sm-9">@Model.SoQuyetDinh</dd>

            <dt class="col-sm-3 text-muted">Lý do thay đổi</dt>
            <dd class="col-sm-9">@Model.LyDoThayDoi</dd>

            <dt class="col-sm-3 text-muted">Ghi chú</dt>
            <dd class="col-sm-9">@Model.GhiChu</dd>

            <dt class="col-sm-3 text-muted">Người tạo</dt>
            <dd class="col-sm-9">@Model.NguoiTao</dd>

            <dt class="col-sm-3 text-muted">Ngày tạo</dt>
            <dd class="col-sm-9">@Model.NgayTao?.ToString("dd/MM/yyyy HH:mm")</dd>

            <dt class="col-sm-3 text-muted">Người cập nhật</dt>
            <dd class="col-sm-9">@Model.NguoiCapNhat</dd>

            <dt class="col-sm-3 text-muted">Ngày cập nhật</dt>
            <dd class="col-sm-9">@Model.NgayCapNhat?.ToString("dd/MM/yyyy HH:mm")</dd>
        </dl>
    </div>
</div>

<div class="mt-3 d-flex gap-2">
    <a asp-action="Edit" asp-route-id="@Model.MaLichSuCuTru" class="btn btn-warning">
        <i class="bi bi-pencil-square"></i> Sửa
    </a>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left-circle"></i> Quay lại
    </a>
</div>
