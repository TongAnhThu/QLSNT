@model QLSNT.Models.LichSuDiaChi

@{
    ViewData["Title"] = "Cập nhật lịch sử địa chỉ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mb-3 text-primary fw-bold">
    <i class="bi bi-pencil-square"></i> Cập nhật lịch sử địa chỉ
</h2>

<div class="row">
    <div class="col-md-8">
        <form asp-action="Edit" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="MaLichSuCuTru" />

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Người dân -->
            <div class="mb-3">
                <label asp-for="MaCCCD" class="form-label">Người dân (CCCD)</label>
                <select asp-for="MaCCCD"
                        asp-items="ViewBag.NguoiDanList"
                        class="form-select">
                    <option value="">-- Chọn người dân --</option>
                </select>
                <span asp-validation-for="MaCCCD" class="text-danger"></span>
            </div>

            <!-- Xã mới -->
            <div class="mb-3">
                <label asp-for="MaXaMoi" class="form-label">Xã mới</label>
                <select asp-for="MaXaMoi"
                        asp-items="ViewBag.XaMoiList"
                        class="form-select">
                    <option value="">-- Chọn xã mới --</option>
                </select>
                <span asp-validation-for="MaXaMoi" class="text-danger"></span>
            </div>

            <!-- Địa chỉ cũ -->
            <div class="mb-3">
                <label asp-for="DiaChiCu" class="form-label">Địa chỉ cũ</label>
                <textarea asp-for="DiaChiCu" class="form-control" rows="2"></textarea>
                <span asp-validation-for="DiaChiCu" class="text-danger"></span>
            </div>

            <!-- Địa chỉ mới -->
            <div class="mb-3">
                <label asp-for="DiaChiMoi" class="form-label">Địa chỉ mới</label>
                <textarea asp-for="DiaChiMoi" class="form-control" rows="2"></textarea>
                <span asp-validation-for="DiaChiMoi" class="text-danger"></span>
            </div>

            <!-- Ngày hiệu lực / Ngày kết thúc -->
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="NgayHieuLuc" class="form-label">Ngày hiệu lực</label>
                    <input asp-for="NgayHieuLuc" class="form-control" type="date" />
                    <span asp-validation-for="NgayHieuLuc" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="NgayKetThuc" class="form-label">Ngày kết thúc</label>
                    <input asp-for="NgayKetThuc" class="form-control" type="date" />
                    <span asp-validation-for="NgayKetThuc" class="text-danger"></span>
                </div>
            </div>

            <!-- Loại thay đổi -->
            <div class="mb-3">
                <label asp-for="LoaiThayDoi" class="form-label">Loại thay đổi</label>
                <input asp-for="LoaiThayDoi" class="form-control" />
                <span asp-validation-for="LoaiThayDoi" class="text-danger"></span>
            </div>

            <!-- Số quyết định -->
            <div class="mb-3">
                <label asp-for="SoQuyetDinh" class="form-label">Số quyết định</label>
                <input asp-for="SoQuyetDinh" class="form-control" />
                <span asp-validation-for="SoQuyetDinh" class="text-danger"></span>
            </div>

            <!-- Lý do thay đổi -->
            <div class="mb-3">
                <label asp-for="LyDoThayDoi" class="form-label">Lý do thay đổi</label>
                <textarea asp-for="LyDoThayDoi" class="form-control" rows="2"></textarea>
                <span asp-validation-for="LyDoThayDoi" class="text-danger"></span>
            </div>

            <!-- Ghi chú -->
            <div class="mb-3">
                <label asp-for="GhiChu" class="form-label">Ghi chú</label>
                <textarea asp-for="GhiChu" class="form-control" rows="2"></textarea>
                <span asp-validation-for="GhiChu" class="text-danger"></span>
            </div>

            <!-- Buttons -->
            <div class="mt-3 d-flex gap-2">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-save"></i> Lưu
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left-circle"></i> Quay lại
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
