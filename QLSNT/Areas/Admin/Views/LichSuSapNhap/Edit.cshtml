@model QLSNT.Models.LichSuSapNhap

@{
    ViewData["Title"] = "Chỉnh sửa lịch sử sáp nhập";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mb-3">@ViewData["Title"]</h2>

<div class="mb-3">
    <a asp-action="Index" class="btn btn-secondary btn-sm">← Quay lại danh sách</a>
</div>

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()
    <div class="card">
        <div class="card-body">
            <div class="mb-3">
                <label asp-for="MaLSSN" class="form-label"></label>
                <input asp-for="MaLSSN" class="form-control" readonly />
                <span asp-validation-for="MaLSSN" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="SoNghiDinh" class="form-label">Sự kiện hành chính</label>
                <select asp-for="SoNghiDinh" class="form-select" readonly
                        asp-items="ViewBag.SuKienHanhChinhList">
                    <option value="">-- Chọn sự kiện --</option>
                </select>
                <span asp-validation-for="SoNghiDinh" class="text-danger"></span>
            </div>


            <div class="mb-3">
                <label asp-for="NguoiTao" class="form-label"></label>
                <input asp-for="NguoiTao" class="form-control" />
                <span asp-validation-for="NguoiTao" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="NgayTao" class="form-label"></label>
                <input asp-for="NgayTao" type="datetime-local" class="form-control" />
                <span asp-validation-for="NgayTao" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="GhiChu" class="form-label"></label>
                <textarea asp-for="GhiChu" class="form-control" rows="3"></textarea>
                <span asp-validation-for="GhiChu" class="text-danger"></span>
            </div>
        </div>
        <div class="card-footer text-end">
            <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
        </div>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
