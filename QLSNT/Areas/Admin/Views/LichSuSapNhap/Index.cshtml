@model IEnumerable<QLSNT.Models.LichSuSapNhap>

@{
    ViewData["Title"] = "Danh sách lịch sử sáp nhập";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="fw-bold text-primary">@ViewData["Title"]</h2>
    <a asp-action="Create" class="btn btn-success">
        + Thêm lịch sử sáp nhập
    </a>
</div>

<form asp-action="Index" method="get" class="mb-4">
    <div class="row g-2">
        <div class="col-md-6 col-lg-4">
            <input type="text"
                   name="search"
                   value="@(ViewBag.Search ?? "")"
                   class="form-control"
                   placeholder="Tìm theo mã, số nghị định, ghi chú..." />
        </div>
        <div class="col-md-2">
            <button type="submit" class="btn btn-primary w-100">Tìm kiếm</button>
        </div>
        <div class="col-md-2">
            <a asp-action="Index" class="btn btn-outline-secondary w-100">Xóa lọc</a>
        </div>
    </div>
</form>

<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover align-middle">
        <thead class="table-light">
            <tr>
                <th>Mã LSSN</th>
                <th>Loại</th>
                <th>Từ cũ → thành mới</th>
                <th>Người tạo</th>
                <th>Ngày tạo</th>
                <th>Ghi chú</th>
                <th class="text-center" style="width: 200px;">Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @if (!Model.Any())
            {
                <tr>
                    <td colspan="7" class="text-center text-muted">
                        Không có bản ghi nào.
                    </td>
                </tr>
            }
            else
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.MaLSSN</td>
                        <td>
                            @(item.LssnTinhs.Any() ? "Tỉnh" : item.LssnXas.Any() ? "Xã" : "-")
                        </td>
                        <td>
                            @if (item.LssnTinhs.Any())
                            {
                                foreach (var t in item.LssnTinhs)
                                {
                                    @($"{t.TinhCu?.TenTinhCu} → {t.TinhMoi?.TenTinhMoi}") <br />
                                }
                            }
                            else if (item.LssnXas.Any())
                            {
                                foreach (var x in item.LssnXas)
                                {
                                    @($"{x.XaCu?.TenXaCu} → {x.XaMoi?.TenXaMoi}") <br />
                                }
                            }
                            else
                            {
                                @("-")
                            }
                        </td>
                        <td>@item.NguoiTao</td>
                        <td>@item.NgayTao</td>
                        <td>@(string.IsNullOrEmpty(item.GhiChu) ? "-" : item.GhiChu)</td>
                        <td class="text-center">
                            <a asp-action="Details" asp-route-id="@item.MaLSSN" class="btn btn-sm btn-info me-1">Chi tiết</a>
                            <a asp-action="Edit" asp-route-id="@item.MaLSSN" class="btn btn-sm btn-warning me-1">Sửa</a>
                            <a asp-action="Delete" asp-route-id="@item.MaLSSN" class="btn btn-sm btn-danger">Xóa</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
