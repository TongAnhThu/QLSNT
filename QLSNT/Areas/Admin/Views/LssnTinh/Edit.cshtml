@model QLSNT.Models.LssnTinh

@{
    ViewData["Title"] = "Sửa lịch sử sáp nhập tỉnh";
}

<h1>@ViewData["Title"]</h1>

<div class="mb-3">
    <a asp-action="Details" asp-route-id="@Model.MaLSSN" class="btn btn-secondary btn-sm">
        ← Quay lại chi tiết
    </a>
</div>

<form asp-action="Edit" method="post">
    @* PK, không cho phép sửa *@
    <input type="hidden" asp-for="MaLSSN" />

    <div class="mb-3">
        <label class="form-label">Mã LSSN</label>
        <input class="form-control" value="@Model.MaLSSN" disabled />
    </div>

    <div class="mb-3">
        <label asp-for="MaTinhCu" class="form-label">Tỉnh cũ</label>
        <select asp-for="MaTinhCu" class="form-select" asp-items="ViewBag.TinhCuList">
        </select>
        <span asp-validation-for="MaTinhCu" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="MaTinhMoi" class="form-label">Tỉnh mới</label>
        <select asp-for="MaTinhMoi" class="form-select" asp-items="ViewBag.TinhMoiList">
        </select>
        <span asp-validation-for="MaTinhMoi" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
