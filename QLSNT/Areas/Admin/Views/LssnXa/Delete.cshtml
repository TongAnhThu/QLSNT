@model QLSNT.Models.LssnXa

@{
    var lssn = ViewBag.LichSuSapNhap as QLSNT.Models.LichSuSapNhap;
    ViewData["Title"] = "Xóa xã khỏi lần sáp nhập " + (lssn?.MaLSSN ?? "");
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewData["Title"]</h2>

<div class="alert alert-danger">
    Bạn có chắc chắn muốn xóa bản ghi xã sau khỏi lần sáp nhập
    <strong>@Model.MaLSSN</strong> không?
</div>

<dl class="row">
    <dt class="col-sm-3">Xã cũ</dt>
    <dd class="col-sm-9">@Model.XaCu?.TenXaCu (@Model.MaXaCu)</dd>

    <dt class="col-sm-3">Xã mới</dt>
    <dd class="col-sm-9">@Model.XaMoi?.TenXaMoi (@Model.MaXaMoi)</dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="MaLSSN" />
    <button type="submit" class="btn btn-danger">Xóa</button>
    <a asp-controller="LichSuSapNhap"
       asp-action="Details"
       asp-route-id="@Model.MaLSSN"
       class="btn btn-secondary">
        Hủy
    </a>
</form>
