@model IEnumerable<QLSNT.Models.NguoiDan>

@{
    ViewData["Title"] = "Quản lý Người dân";
    var keyword = ViewBag.Keyword as string;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h3 mb-0 fw-bold text-primary">Danh sách Người dân</h1>
    <a asp-action="Create" class="btn btn-success">
        + Thêm người dân
    </a>
</div>

<div class="card mb-3">
    <div class="card-body">
        <form method="get" class="row g-2">
            <div class="col-md-6">
                <input type="text"
                       name="keyword"
                       value="@keyword"
                       class="form-control"
                       placeholder="Tìm theo CCCD, họ tên..." />
            </div>
            <div class="col-md-3">
                <button type="submit" class="btn btn-primary w-100">Tìm kiếm</button>
            </div>
            <div class="col-md-3 text-md-end">
                @if (!string.IsNullOrWhiteSpace(keyword))
                {
                        <a asp-action="Index" class="btn btn-outline-secondary w-100">Xóa lọc</a>
                }
            </div>
        </form>
    </div>
</div>

@if (Model != null && Model.Any())
{
        <div class="card">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-striped table-hover mb-0 align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>CCCD</th>
                                <th>Họ tên</th>
                                <th>Ngày sinh</th>
                                <th>Giới tính</th>
                                <th>Dân tộc</th>
                                <th>Tôn giáo</th>
                                <th style="width: 210px;">Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                        @foreach (var item in Model)
                        {
                                <tr>
                                    <td>@item.MaCCCD</td>
                                    <td>@item.HoTen</td>
                                    <td>@item.NgaySinh?.ToString("dd/MM/yyyy")</td>
                                    <td>@item.GioiTinh</td>
                                    <td>@item.DanToc?.TenDanToc</td>
                                    <td>@item.TonGiao?.TenTonGiao</td>
                                    <td>
                                        <a asp-action="Details" asp-route-id="@item.MaCCCD"
                                           class="btn btn-sm btn-info me-1">Chi tiết</a>
                                        <a asp-action="Edit" asp-route-id="@item.MaCCCD"
                                           class="btn btn-sm btn-warning me-1">Sửa</a>
                                        <a asp-action="Delete" asp-route-id="@item.MaCCCD"
                                           class="btn btn-sm btn-danger">Xóa</a>
                                    </td>
                                </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
}
else
{
        <div class="alert alert-info">
            Không tìm thấy người dân nào.
        </div>
}
