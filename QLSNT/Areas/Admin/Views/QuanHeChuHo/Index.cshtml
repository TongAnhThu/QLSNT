@model IEnumerable<QLSNT.Models.QuanHeChuHo>

@{
    ViewData["Title"] = "Danh sách Quan hệ chủ hộ";
}

<h1>Danh sách Quan hệ chủ hộ</h1>

<div class="row mb-3">
    <div class="col-md-6">
        <form asp-action="Index" method="get" class="d-flex">
            <input type="text"
                   name="search"
                   value="@ViewBag.Search"
                   class="form-control me-2"
                   placeholder="Tìm theo tên quan hệ (Con, Vợ, Chồng...)" />
            <button type="submit" class="btn btn-primary">Tìm kiếm</button>
        </form>
    </div>
    <div class="col-md-6 text-end">
        <a asp-action="Create" class="btn btn-success">+ Thêm quan hệ</a>
    </div>
</div>

<table class="table table-striped table-bordered">
    <thead class="table-light">
        <tr>
            <th>Mã QHCH</th>
            <th>Tên quan hệ</th>
            <th>Mô tả</th>
            <th style="width:180px;">Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MaQHCH</td>
                <td>@item.TenQHCH</td>
                <td>@item.MoTa</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.MaQHCH" class="btn btn-sm btn-info">Chi tiết</a>
                    <a asp-action="Edit" asp-route-id="@item.MaQHCH" class="btn btn-sm btn-warning">Sửa</a>
                    <a asp-action="Delete" asp-route-id="@item.MaQHCH" class="btn btn-sm btn-danger">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (!Model.Any())
{
    <p><em>Chưa có dữ liệu quan hệ chủ hộ.</em></p>
}
