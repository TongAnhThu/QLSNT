@model QLSNT.Models.TamTru

@{
    ViewData["Title"] = "Xóa Tạm trú";
}

<h1>Xóa Tạm trú</h1>
<hr />

<p>Bạn có chắc chắn muốn xóa bản ghi tạm trú sau?</p>

<dl class="row">
    <dt class="col-sm-3">Mã xã</dt>
    <dd class="col-sm-9">@Model.MaXaMoi</dd>

    <dt class="col-sm-3">CCCD</dt>
    <dd class="col-sm-9">@Model.MaCCCD</dd>

    <dt class="col-sm-3">Địa chỉ tạm trú</dt>
    <dd class="col-sm-9">@Model.DiaChi</dd>

    <dt class="col-sm-3">Ngày bắt đầu</dt>
    <dd class="col-sm-9">@Model.NgayDangKy?.ToString("dd/MM/yyyy")</dd>

    <dt class="col-sm-3">Ngày kết thúc</dt>
    <dd class="col-sm-9">@Model.ThoiHan</dd>

    <dt class="col-sm-3">Lý do</dt>
    <dd class="col-sm-9">@Model.NoiDungDeNghi</dd>
</dl>

<form asp-action="Delete" method="post" class="mt-3">
    <input type="hidden" asp-for="MaXaMoi" />
    <input type="hidden" asp-for="MaCCCD" />

    <button type="submit" class="btn btn-danger">Xóa</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Hủy</a>
</form>
