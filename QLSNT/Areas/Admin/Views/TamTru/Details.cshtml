@model QLSNT.Models.TamTru

@{
    ViewData["Title"] = "Chi tiết Tạm trú";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Chi tiết Tạm trú</h1>
<hr />

<dl class="row">
    <dt class="col-sm-3">Mã xã</dt>
    <dd class="col-sm-9">@Model.MaXaMoi</dd>

    <dt class="col-sm-3">CCCD</dt>
    <dd class="col-sm-9">@Model.MaCCCD</dd>

    <dt class="col-sm-3">Địa chỉ tạm trú</dt>
    <dd class="col-sm-9">@Model.DiaChi</dd>

    <dt class="col-sm-3">Ngày bắt đầu</dt>
    <dd class="col-sm-9">@Model.NgayDangKy</dd>

    <dt class="col-sm-3">Thời Hạn</dt>
    <dd class="col-sm-9">@Model.ThoiHan</dd>

    <dt class="col-sm-3">Lý do</dt>
    <dd class="col-sm-9">@Model.NoiDungDeNghi</dd>
</dl>

<div class="mt-3">
    <a asp-action="Edit"
       asp-route-maXaMoi="@Model.MaXaMoi"
       asp-route-maCCCD="@Model.MaCCCD"
       class="btn btn-warning">Sửa</a>

    <a asp-action="Index" class="btn btn-secondary ms-2">Quay lại</a>
</div>
