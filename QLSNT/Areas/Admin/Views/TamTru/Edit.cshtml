@model QLSNT.Models.TamTru

@{
    ViewData["Title"] = "Cập nhật tạm trú";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mb-3 text-primary fw-bold">
    <i class="bi bi-pencil-square"></i> Cập nhật tạm trú
</h2>

<div class="row">
    <div class="col-md-8">
        <form asp-action="Edit" method="post">
            @Html.AntiForgeryToken()
            <!-- Composite key hidden -->
            <input type="hidden" asp-for="MaCCCD" />
            <input type="hidden" asp-for="MaXaMoi" />

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Người dân -->
            <div class="mb-3">
                <label asp-for="MaCCCD" class="form-label">Người dân (CCCD)</label>
                <input asp-for="MaCCCD" class="form-control" readonly />
            </div>

            <!-- Xã mới -->
            <div class="mb-3">
                <label asp-for="MaXaMoi" class="form-label">Xã mới</label>
                <input asp-for="MaXaMoi" class="form-control" readonly />
            </div>

            <!-- Địa chỉ -->
            <div class="mb-3">
                <label asp-for="DiaChi" class="form-label">Địa chỉ</label>
                <textarea asp-for="DiaChi" class="form-control" rows="2"></textarea>
                <span asp-validation-for="DiaChi" class="text-danger"></span>
            </div>

            <!-- Ngày đăng ký -->
            <div class="mb-3">
                <label asp-for="NgayDangKy" class="form-label">Ngày đăng ký</label>
                <input asp-for="NgayDangKy" class="form-control" type="date" />
                <span asp-validation-for="NgayDangKy" class="text-danger"></span>
            </div>

            <!-- Thời hạn -->
            <div class="mb-3">
                <label asp-for="ThoiHan" class="form-label">Thời hạn tạm trú</label>
                <input asp-for="ThoiHan" class="form-control" placeholder="Ví dụ: 6 tháng, 1 năm, đến 01/2026" />
                <span asp-validation-for="ThoiHan" class="text-danger"></span>
            </div>

            <!-- Nội dung đề nghị -->
            <div class="mb-3">
                <label asp-for="NoiDungDeNghi" class="form-label">Nội dung đề nghị</label>
                <textarea asp-for="NoiDungDeNghi" class="form-control" rows="2"></textarea>
                <span asp-validation-for="NoiDungDeNghi" class="text-danger"></span>
            </div>

            <div class="mt-3 d-flex gap-2">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-save"></i> Lưu
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left-circle"></i> Quay lại
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
