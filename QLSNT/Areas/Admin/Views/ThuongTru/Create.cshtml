@model QLSNT.Models.ThuongTru

@{
    ViewData["Title"] = "Thêm Thường trú";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="MaXaMoi">Xã mới</label>
        <select asp-for="MaXaMoi" class="form-control" asp-items="ViewBag.MaXaMoi"></select>
    </div>
    <div class="form-group">
        <label for="MaCCCD">Người dân</label>
        <select asp-for="MaCCCD" class="form-control" asp-items="ViewBag.MaCCCD"></select>
    </div>
    <div class="form-group">
        <label asp-for="DiaChi"></label>
        <input asp-for="DiaChi" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="NgayDangKy"></label>
        <input asp-for="NgayDangKy" type="date" class="form-control" />
    </div>
    <button type="submit" class="btn btn-success">Lưu</button>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</form>
