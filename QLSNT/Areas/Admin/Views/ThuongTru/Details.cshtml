@model QLSNT.Models.ThuongTru

@{
    ViewData["Title"] = "Chi tiết Thường trú";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Chi tiết Thường trú</h1>
<hr />

<dl class="row">
    <dt class="col-sm-3">Mã xã</dt>
    <dd class="col-sm-9">@Model.MaXaMoi</dd>

    <dt class="col-sm-3">CCCD</dt>
    <dd class="col-sm-9">@Model.MaCCCD</dd>

    <dt class="col-sm-3">Địa chỉ</dt>
    <dd class="col-sm-9">@Model.DiaChi</dd>

    <dt class="col-sm-3">Ngày đăng ký</dt>
    <dd class="col-sm-9">@((Model.NgayDangKy.HasValue) ? Model.NgayDangKy.Value.ToString("dd/MM/yyyy") : "-")</dd>
</dl>

<div class="mt-3">
    <a asp-action="Edit"
       asp-route-maXaMoi="@Model.MaXaMoi"
       asp-route-maCCCD="@Model.MaCCCD"
       class="btn btn-warning">Sửa</a>

    <a asp-action="Index" class="btn btn-secondary ms-2">Quay lại</a>
</div>
