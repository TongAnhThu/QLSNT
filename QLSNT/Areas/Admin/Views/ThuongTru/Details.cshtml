@model QLSNT.Models.ThuongTru

@{
    ViewData["Title"] = "Chi tiết Thường trú";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewData["Title"]</h2>

<div>
    <dl class="row">
        <dt class="col-sm-3">Xã mới</dt>
        <dd class="col-sm-9">@Model.XaMoi?.TenXaMoi</dd>

        <dt class="col-sm-3">Người dân</dt>
        <dd class="col-sm-9">@Model.NguoiDan?.HoTen</dd>

        <dt class="col-sm-3">Địa chỉ</dt>
        <dd class="col-sm-9">@Model.DiaChi</dd>

        <dt class="col-sm-3">Ngày đăng ký</dt>
        <dd class="col-sm-9">@Model.NgayDangKy?.ToString("dd/MM/yyyy")</dd>
    </dl>
</div>

<a asp-action="Edit" asp-route-maXaMoi="@Model.MaXaMoi" asp-route-maCCCD="@Model.MaCCCD" class="btn btn-warning">Sửa</a>
<a asp-action="Index" class="btn btn-secondary">Quay lại</a>
