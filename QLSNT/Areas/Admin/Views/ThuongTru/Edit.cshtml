@model QLSNT.Models.ThuongTru

@{
    ViewData["Title"] = "Sửa Thường trú";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="MaXaMoi" />
    <input type="hidden" asp-for="MaCCCD" />

    <div class="form-group">
        <label asp-for="DiaChi"></label>
        <input asp-for="DiaChi" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="NgayDangKy"></label>
        <input asp-for="NgayDangKy" type="date" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Cập nhật</button>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</form>
