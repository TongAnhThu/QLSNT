@model IEnumerable<QLSNT.Models.ThuongTru>

@{
    ViewData["Title"] = "Danh sách Thường trú";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Thêm mới</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Mã xã mới</th>
            <th>Tên xã</th>
            <th>Mã CCCD</th>
            <th>Họ tên</th>
            <th>Địa chỉ</th>
            <th>Ngày đăng ký</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MaXaMoi</td>
                <td>@item.XaMoi?.TenXaMoi</td>
                <td>@item.MaCCCD</td>
                <td>@item.NguoiDan?.HoTen</td>
                <td>@item.DiaChi</td>
                <td>@item.NgayDangKy?.ToString("dd/MM/yyyy")</td>
                <td>
                    <a asp-action="Details" asp-route-maXaMoi="@item.MaXaMoi" asp-route-maCCCD="@item.MaCCCD">Chi tiết</a> |
                    <a asp-action="Edit" asp-route-maXaMoi="@item.MaXaMoi" asp-route-maCCCD="@item.MaCCCD">Sửa</a> |
                    <a asp-action="Delete" asp-route-maXaMoi="@item.MaXaMoi" asp-route-maCCCD="@item.MaCCCD">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
