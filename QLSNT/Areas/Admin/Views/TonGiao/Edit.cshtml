@model QLSNT.Models.TonGiao

@{
    ViewData["Title"] = "Sửa Tôn giáo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Sửa Tôn giáo</h1>

<hr />

<form asp-action="Edit" method="post">

    <div class="mb-3">
        <label asp-for="MaTonGiao" class="form-label"></label>
        <input asp-for="MaTonGiao" class="form-control" readonly />
    </div>

    <div class="mb-3">
        <label asp-for="TenTonGiao" class="form-label"></label>
        <input asp-for="TenTonGiao" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="GhiChu" class="form-label"></label>
        <textarea asp-for="GhiChu" class="form-control"></textarea>
    </div>

    <button class="btn btn-primary">Lưu thay đổi</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Quay lại</a>

</form>
