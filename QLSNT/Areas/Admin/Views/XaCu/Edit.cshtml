@model QLSNT.Models.XaCu

@{
    ViewData["Title"] = "Cập nhật xã cũ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mb-3">Cập nhật xã cũ</h2>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="MaXaCu" />

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="MaXaCu" class="form-label">Mã xã</label>
                <input asp-for="MaXaCu" class="form-control" disabled />
                @* nếu không muốn sửa mã xã, dùng hidden để giữ giá trị *@
            </div>

            <div class="mb-3">
                <label asp-for="TenXaCu" class="form-label">Tên xã</label>
                <input asp-for="TenXaCu" class="form-control" />
                <span asp-validation-for="TenXaCu" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="MaHuyenCu" class="form-label">Huyện cũ</label>
                <select asp-for="MaHuyenCu"
                        asp-items="ViewBag.HuyenCuList"
                        class="form-select">
                    <option value="">-- Chọn huyện cũ --</option>
                </select>
                <span asp-validation-for="MaHuyenCu" class="text-danger"></span>
            </div>

            @* Thêm các field khác nếu có *@

            <div class="mt-3">
                <button type="submit" class="btn btn-primary">Lưu</button>
                <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
