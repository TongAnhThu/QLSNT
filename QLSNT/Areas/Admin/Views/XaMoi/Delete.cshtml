@model QLSNT.Models.XaMoi

@{
    ViewData["Title"] = "Xóa Xã mới";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Xóa Xã mới</h1>

<h4>Bạn có chắc chắn muốn xóa xã sau?</h4>
<hr />

<dl class="row">
    <dt class="col-sm-3">Mã xã</dt>
    <dd class="col-sm-9">@Model.MaXaMoi</dd>

    <dt class="col-sm-3">Tên xã</dt>
    <dd class="col-sm-9">@Model.TenXaMoi</dd>

    <dt class="col-sm-3">Loại xã</dt>
    <dd class="col-sm-9">@Model.LoaiXa</dd>

    <dt class="col-sm-3">Trạng thái</dt>
    <dd class="col-sm-9">@Model.TrangThai</dd>

    <dt class="col-sm-3">Ghi chú</dt>
    <dd class="col-sm-9">@Model.GhiChu</dd>
</dl>

<form asp-action="Delete" method="post" class="mt-3">
    <input type="hidden" asp-for="MaXaMoi" />
    <button type="submit" class="btn btn-danger">Xóa</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Hủy</a>
</form>
