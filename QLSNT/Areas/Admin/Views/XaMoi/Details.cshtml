@model QLSNT.Models.XaMoi

@{
    ViewData["Title"] = "Chi tiết Xã mới";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Chi tiết Xã mới</h1>
<hr />

<dl class="row">
    <dt class="col-sm-3">Mã xã</dt>
    <dd class="col-sm-9">@Model.MaXaMoi</dd>

    <dt class="col-sm-3">Tên xã</dt>
    <dd class="col-sm-9">@Model.TenXaMoi</dd>

    <dt class="col-sm-3">Loại xã</dt>
    <dd class="col-sm-9">@Model.LoaiXa</dd>

    <dt class="col-sm-3">Trạng thái</dt>
    <dd class="col-sm-9">@Model.TrangThai</dd>

    <dt class="col-sm-3">Ghi chú</dt>
    <dd class="col-sm-9">@Model.GhiChu</dd>
</dl>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.MaXaMoi" class="btn btn-warning">Sửa</a>
    <a asp-action="Index" class="btn btn-secondary ms-2">Quay lại</a>
</div>
